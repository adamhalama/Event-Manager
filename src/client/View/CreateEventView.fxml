        <HBox alignment="CENTER_RIGHT" prefHeight="51.0" prefWidth="631.0">
            <children>
                <Button mnemonicParsing="false" prefHeight="42.0" prefWidth="102.0" text="Cancel">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Button>
                <Label prefHeight="15.0" prefWidth="35.0" text=" " />
                <Button fx:id="createButton" mnemonicParsing="false" prefHeight="42.0" prefWidth="102.0" text="Create">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Button>
                <Label prefHeight="15.0" prefWidth="27.0" text=" " />
