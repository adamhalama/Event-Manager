                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
                <Label prefHeight="15.0" prefWidth="50.0" text=" " />
                <Button fx:id="physicalButton" mnemonicParsing="false" onAction="#physicalPress" prefHeight="42.0" prefWidth="142.0" text="Physical">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
            <Label prefHeight="15.0" prefWidth="31.0" text=" " />
            <Button mnemonicParsing="false" onAction="#resetPress" prefHeight="39.0" prefWidth="54.0" text="Reset" />
