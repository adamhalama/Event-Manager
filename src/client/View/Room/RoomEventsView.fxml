            <TableColumn fx:id="idColumn" editable="false" prefWidth="38.39999580383301" text="ID" />
            <TableColumn fx:id="titleColumn" editable="false" prefWidth="105.60002899169922" sortable="false" text="Title" />
            <TableColumn fx:id="dateColumn" editable="false" prefWidth="133.5999755859375" text="Date" />
            <TableColumn fx:id="endColumn" editable="false" prefWidth="139.20001220703125" text="End time" />
            <TableColumn fx:id="creatorColumn" editable="false" prefWidth="112.00009155273438" sortable="false" text="Creator" />
